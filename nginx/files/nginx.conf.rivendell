        }
    }

    # Backend Definitions
    # Foundry 12 Internal
    upstream foundry_backend {
        server 192.168.4.50:30012 max_fails=5 fail_timeout=30s;
    }

    # Foundry 13 External
    upstream foundryu_backend {
        server 192.168.4.50:30013 max_fails=5 fail_timeout=30s;
    }

    # Foundry 12 External
    upstream foundryguid_backend {
        server 192.168.4.50:30012 max_fails=5 fail_timeout=30s;
    }

    upstream portainer_backend {
        server 192.168.4.50:9000 max_fails=5 fail_timeout=30s;
    }

}
