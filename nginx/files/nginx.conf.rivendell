        }
    }

    # Foundry 12 Internal
    server {
        listen 443 ssl;

        # Private v12 Foundry
        server_name foundry.hjedi.net;

            # Common SSL Settings
            ssl_protocols TLSv1.2 TLSv1.3;
            ssl_prefer_server_ciphers on;
